<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CardTrack</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/genres">Genres</a>
        <a href="/editions">Editions</a>
      </nav>
    </header>
    <h1><%=title%></h1>
    <% if (locals.messageText) {%>
    <div><%=messageText%></div>
    <br />
    <a href="/creategenre">Add a new Genre to your Collection</a><br /><br />
    <a href="/">View your current Cards</a><br /><br />

    <%}%> <% if (locals.genres) {%>
    <a href="/creategenre">Add a new Genre to your Collection</a><br /><br />
    <a href="/">View your current Cards</a><br /><br />

    <% genres.forEach(genre => { %>
    <a href="/<%=genre.id%>/genre"><%=genre.genre %></a>
    <div>
      <form action="/<%=genre.id%>/updategenre" method="GET">
        <button type="submit">Update</button>
      </form>
      <form action="/<%=genre.id%>/deletegenre" method="POST">
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this genre?')"
        >
          Delete
        </button>
      </form>
      <br />
    </div>

    <%}) %><br />
    <a href="/">Back to Home</a>
    <%}%>
  </body>
</html>
