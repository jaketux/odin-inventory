<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CardTrack</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/">Home</a>
        <a href="/genres">Genres</a>
        <a href="/editions">Editions</a>
      </nav>
    </header>
    <h1><%=title%></h1>
    <% if (locals.messageText) {%>
    <div><%=messageText%></div>
    <br />
    <%}%>
    <a href="/createedition">Add a new Edition to your Collection</a
    ><br /><br />
    <a href="/">View your current Cards</a><br /><br />

    <% if (locals.editions) {%> <% editions.forEach(edition => { %>
    <a href="/<%=edition.id%>/edition"><%=edition.edition %></a>
    <div>
      <form action="/<%=edition.id%>/updateedition" method="GET">
        <button type="submit">Update</button>
      </form>
      <form action="/<%=edition.id%>/deleteedition" method="POST">
        <button
          type="submit"
          onclick="return confirm('Are you sure you want to delete this edition?')"
        >
          Delete
        </button>
      </form>
    </div>
    <br /><br />
    <%}) %> <a href="/">Back to Home</a>
    <%}%>
  </body>
</html>
